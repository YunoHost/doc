{
    "extends": "markdownlint-rules-grav-pages/rules/frontmatter.schema.json",
    "default": true,
    "code-block-style": {
        "style": "fenced"
    },
    "code-fence-style": {
        "style": "backtick"
    },
    "emphasis-style": {
        "style": "asterisk"
    },
    "strong-style": {
        "style": "asterisk"
    },
    "ul-style": {
        "style": "dash"
    },
    "ul-indent": {
        "indent": 2
    },
    "heading-style": {
        "style": "atx"
    },
    "no-duplicate-heading": {
        "siblings_only": true
    },
    "hr-style": {
        "style": "---"
    },
    "ol-prefix": {
        "style": "ordered"
    },
    "no-trailing-punctuation": {
        "punctuation": ".,;:"
    },
    "no-inline-html": false,
    "fenced-code-language": {
        "allowed_languages": [
            "bash",
            "html",
            "css",
            "javascript",
            "php",
            "json",
            "yaml",
            "toml",
            "markdown",
            "text"
        ],
        "language_only": true
    },
    "proper-names": {
        "code_blocks": false,
        "html_elements": false,
        "names": [
            "YunoHost",
            "GitHub"
        ]
    },
    "line-length": false,
    "no-reversed-links": false,
    "no-missing-space-atx": false
}